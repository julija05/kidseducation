# Kids' Security Configuration
# Add these to your .env file for enhanced kids' security

# Session Security
SESSION_LIFETIME=30
SESSION_EXPIRE_ON_CLOSE=true
SESSION_ENCRYPT=true

# Rate Limiting for Kids
KIDS_RATE_LIMIT_PER_MINUTE=60
KIDS_SESSION_TIMEOUT=30

# Content Moderation
CONTENT_MODERATION_ENABLED=true
CONTENT_MODERATION_STRICT_MODE=true
EXTERNAL_MODERATION_API_KEY=your_api_key_here

# Parental Controls
PARENTAL_CONTROLS_ENABLED=true
DEFAULT_DAILY_TIME_LIMIT=120
DEFAULT_BEDTIME_RESTRICTION=true
DEFAULT_CONTENT_FILTER_LEVEL=medium

# Privacy Protection
PRIVACY_MODE_ENABLED=true
COPPA_COMPLIANCE_ENABLED=true
GDPR_COMPLIANCE_ENABLED=true
DATA_RETENTION_STRICT=true

# Activity Monitoring
ACTIVITY_MONITORING_ENABLED=true
SECURITY_LOGGING_LEVEL=info
PARENT_REPORT_FREQUENCY=weekly

# Emergency Features
EMERGENCY_CONTACT_REQUIRED=true
AUTOMATIC_LOGOUT_ON_SUSPICIOUS_ACTIVITY=true
IMMEDIATE_PARENT_ALERTS=true

# File Upload Security
MAX_UPLOAD_SIZE_KIDS=5242880
ALLOWED_FILE_TYPES_KIDS=jpg,png,gif,pdf
VIRUS_SCANNING_ENABLED=true

# External Services Security
BLOCK_EXTERNAL_LINKS=true
WHITELIST_DOMAINS_ONLY=true
SOCIAL_MEDIA_INTEGRATION_DISABLED=true

# Compliance Logging
PRIVACY_LOG_CHANNEL=privacy
SECURITY_LOG_CHANNEL=security
COMPLIANCE_AUDIT_ENABLED=true

# Backup and Recovery
AUTOMATED_DATA_BACKUP=true
BACKUP_ENCRYPTION_ENABLED=true
DISASTER_RECOVERY_PLAN_ENABLED=true