# Production Environment Variables for Abacoding
# Copy this file to .env on your production server and update the values

APP_NAME=Abacoding
APP_ENV=production
APP_KEY=base64:YOUR_32_CHARACTER_BASE64_ENCODED_APP_KEY_HERE
APP_DEBUG=false
APP_TIMEZONE=UTC
APP_URL=https://yourdomain.com

# Database Configuration
DB_CONNECTION=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=your_production_database
DB_USERNAME=your_db_user
DB_PASSWORD=your_secure_db_password

# Admin User Configuration (KEEP THESE SECRET!)
# Generate a strong password with: openssl rand -base64 32
ADMIN_EMAIL=admin@email.com
ADMIN_NAME="Abacoding Admin"
ADMIN_PASSWORD=YOUR_VERY_SECURE_PASSWORD_HERE

# Email Configuration (Postmark)
MAIL_MAILER=postmark
POSTMARK_TOKEN=your_postmark_token_here
MAIL_FROM_ADDRESS="noreply@abacoding.com"
MAIL_FROM_NAME="${APP_NAME}"

# Session & Cache Configuration
BROADCAST_CONNECTION=log
FILESYSTEM_DISK=local
QUEUE_CONNECTION=database
SESSION_DRIVER=database
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_DOMAIN=.yourdomain.com

CACHE_STORE=database
CACHE_PREFIX=

# Security Configuration
SANCTUM_STATEFUL_DOMAINS=yourdomain.com,www.yourdomain.com
SESSION_SECURE_COOKIE=true
SESSION_SAME_SITE=lax

# Logging
LOG_CHANNEL=single
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=error

# Additional Security (Optional)
# ADMIN_IP_WHITELIST=your.server.ip.address,another.allowed.ip